@model IEnumerable<Versta.DeliveryApp.Application.DTOs.OrderDto>

@{
    ViewData["Title"] = "Список заказов";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
    <tr>
        <th>Номер заказа</th>
        <th>Город отправителя</th>
        <th>Город получателя</th>
        <th>Вес</th>
        <th>Дата забора</th>
        <th>Дата создания</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderNumber</td>
            <td>@order.SenderCity</td>
            <td>@order.ReceiverCity</td>
            <td>@order.Weight</td>
            <td>@order.PickupDate.ToShortDateString()</td>
            <td>@order.CreatedAt.ToShortDateString()</td>
            <td>
                <a asp-action="Details" asp-route-orderNumber="@order.OrderNumber">Детали</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Создать новый заказ</a>
